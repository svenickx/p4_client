<Window x:Class="p4_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p4_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Time" Content="Time" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Connect_Click" FontSize="22"/>
        <Button x:Name="send" Content="send" HorizontalAlignment="Center" Margin="0,367,0,0" VerticalAlignment="Top" FontSize="20" IsEnabled="False" Click="send_Click"/>
        <TextBox x:Name="req" HorizontalAlignment="Center" Margin="0,325,0,0" TextWrapping="Wrap" Text="request" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

    </Grid>
</Window>
