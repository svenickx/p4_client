        <StackPanel x:Name="Replay" Visibility="Collapsed">
            <Grid x:Name="infos" Margin="10, 10, 10, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="name"></ColumnDefinition>
